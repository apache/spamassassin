#  body     __KHOP_PGP_I1       /-----BEGIN PGP (?:SIGNATURE|MESSAGE|PUBLIC|PRIVATE)(?:, PART [0-9]{1,4}\/[0-9]{1,4}| KEY BLOCK)?-----/
#  tflags   __KHOP_PGP_I1       nice
#  body     __KHOP_PGP_I2       /-----END PGP/
