#!/bin/bash

WEBDIR=$HOME/spamassassin.taint.org

vers=`build/get_version`

build/update_devel

# build/mkrpm
cp $WEBDIR/devel/Mail-SpamAssassin-$vers.tar.gz $WEBDIR/released/Mail-SpamAssassin-$vers.tar.gz
cp $WEBDIR/devel/Mail-SpamAssassin-$vers.zip $WEBDIR/released/Mail-SpamAssassin-$vers.zip
# cp WebMake-${vers}-1.noarch.rpm WebMake-${vers}-1.src.rpm $WEBDIR/released
( cd $WEBDIR/released && cvs add -kb *SpamAssassin* )

